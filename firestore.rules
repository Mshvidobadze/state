rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Posts are readable by authenticated users, writable by post author
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
    }
    
    // Comments are readable by authenticated users, writable by comment author
    match /posts/{postId}/comments/{commentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;  // Required for upvoting comments
    }
    
    // Notifications are readable and writable by the notification recipient
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
    
    // Following relationships
    match /following/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Reports collection - authenticated users can create reports
    match /reports/{reportId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;  // Allow users to read reports (for admin purposes)
    }
  }
}